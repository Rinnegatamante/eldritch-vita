# ********************************
# Samplers

[PointSampler]
Texture		= 0
AddressU	= "Wrap"
AddressV	= "Wrap"
MinFilter	= "Point"
MagFilter	= "Point"
MipFilter	= "None"

[FogSampler]
Texture		= 1
MinFilter	= "Linear"
MagFilter	= "Linear"
MipFilter	= "None"

[HUDSampler]
Texture		= 0
MinFilter	= "Linear"
MagFilter	= "Linear"
MipFilter	= "None"
AddressU	= "Clamp"
AddressV	= "Clamp"

[MinSampler]
Texture		= 0

[ColorGradingSampler]
Texture		= 1
AddressU	= "Wrap"
AddressV	= "Wrap"
MinFilter	= "Linear"
MagFilter	= "Linear"
MipFilter	= "None"

[FXAASampler]
AddressU	= "Clamp"
AddressV	= "Clamp"
MinFilter	= "Linear"
MagFilter	= "Linear"
MipFilter	= "None"

[UpscaleSampler]
AddressU	= "Clamp"
AddressV	= "Clamp"
MinFilter	= "Linear"
MagFilter	= "Linear"
MipFilter	= "None"