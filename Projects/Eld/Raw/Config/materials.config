# ********************************
# Materials

[Material_Min]
VertexShader	= "VS_Min"
PixelShader		= "PS_Min"

[Material_MinHUD]
ZEnable			= false
ZWriteEnable	= false
VertexShader	= "VS_Min"
PixelShader		= "PS_Min"

[Material_World]
SDP				= "EldWorld"
VertexShader	= "VS_World"
PixelShader		= "PS_World"
NumSamplers		= &
@ Sampler
@@&				= "PointSampler"
@@&				= "FogSampler"

[Material_EntityStatic]
SDP				= "EldLit"
VertexShader	= "VS_PosUVNormal"
PixelShader		= "PS_Entity"
NumSamplers		= &
@ Sampler
@@&				= "PointSampler"
@@&				= "FogSampler"

[Material_EntityStaticAlphaTest]
SDP				= "EldLit"
VertexShader	= "VS_PosUVNormal"
PixelShader		= "PS_EntityAlphaTest"
NumSamplers		= &
@ Sampler
@@&				= "PointSampler"
@@&				= "FogSampler"

[Material_EntityAnimated]
SDP				= "EldLit"
VertexShader	= "VS_PosUVNormalAnimated"
PixelShader		= "PS_Entity"
NumSamplers		= &
@ Sampler
@@&				= "PointSampler"
@@&				= "FogSampler"

[Material_EntityAnimatedAlphaTest]
SDP				= "EldLit"
VertexShader	= "VS_PosUVNormalAnimated"
PixelShader		= "PS_EntityAlphaTest"
NumSamplers		= &
@ Sampler
@@&				= "PointSampler"
@@&				= "FogSampler"

[Material_Post]
SDP				= "EldPost"
VertexShader	= "VS_PosUV"
PixelShader		= "PS_Post"
ZEnable			= false
ZWriteEnable	= false
NumSamplers	= &
@ Sampler
@@&				= "MinSampler"
@@&				= "ColorGradingSampler"

[Material_MirrorPost]
SDP				= "EldPost"
VertexShader	= "VS_PosUV"
PixelShader		= "PS_MirrorPost"
ZEnable			= false
ZWriteEnable	= false
NumSamplers	= &
@ Sampler
@@&				= "MinSampler"

[Material_HUD]
SDP					= "EldHUD"
VertexShader		= "VS_PosUV"
PixelShader			= "PS_HUD"
ZEnable				= false
ZWriteEnable		= false
AlphaBlendEnable	= true
SrcBlend			= "SrcAlpha"
DestBlend			= "InvSrcAlpha"
NumSamplers			= &
@ Sampler
@@&					= "HUDSampler"

[Material_HUDNoFilter]
SDP					= "EldHUD"
VertexShader		= "VS_PosUV"
PixelShader			= "PS_HUD"
ZEnable				= false
ZWriteEnable		= false
AlphaBlendEnable	= true
SrcBlend			= "SrcAlpha"
DestBlend			= "InvSrcAlpha"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"

[Material_HUDNoFilterCalibration]
SDP					= "EldHUDCalibration"
VertexShader		= "VS_PosUV"
PixelShader			= "PS_HUDCalibration"
ZEnable				= false
ZWriteEnable		= false
AlphaBlendEnable	= true
SrcBlend			= "SrcAlpha"
DestBlend			= "InvSrcAlpha"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"

[Material_HUDMirror]
SDP					= "EldHUD"
VertexShader		= "VS_PosUV"
PixelShader			= "PS_HUDMirror"
ZEnable				= false
ZWriteEnable		= false
AlphaBlendEnable	= true
SrcBlend			= "SrcAlpha"
DestBlend			= "InvSrcAlpha"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"

[Material_HUDMinimap]
SDP					= "EldHUD"
VertexShader		= "VS_PosUV"
PixelShader			= "PS_HUDMinimap"
ZEnable				= false
ZWriteEnable		= false
AlphaBlendEnable	= true
SrcBlend			= "SrcAlpha"
DestBlend			= "InvSrcAlpha"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"

[Material_DropShadow]
SDP					= "EldDropShadow"
ZWriteEnable		= false
AlphaBlendEnable	= true
DestBlend			= "InvSrcAlpha"
SrcBlend			= "SrcAlpha"
VertexShader		= "VS_DropShadow"
PixelShader			= "PS_DropShadow"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"
@@&					= "FogSampler"

[Material_ParticlesAdditive]
SDP					= "EldLit"
ZWriteEnable		= false
AlphaBlendEnable	= true
DestBlend			= "One"
SrcBlend			= "SrcAlpha"
VertexShader		= "VS_Particles"
PixelShader			= "PS_ParticlesAdditive"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"
@@&					= "FogSampler"

[Material_ParticlesAlpha]
SDP					= "EldLit"
ZWriteEnable		= false
AlphaBlendEnable	= true
DestBlend			= "InvSrcAlpha"
SrcBlend			= "SrcAlpha"
VertexShader		= "VS_Particles"
PixelShader			= "PS_ParticlesAlpha"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"
@@&					= "FogSampler"

[Material_ParticlesAlphaTest]
SDP					= "EldLit"
VertexShader		= "VS_Particles"
PixelShader			= "PS_ParticlesAlphaTest"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"
@@&					= "FogSampler"

[Material_WorldTools]
SDP					= "Base"
VertexShader		= "VS_WorldTools"
PixelShader			= "PS_WorldTools"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"

[Rm_Material_WorldToolsHUD]
SDP					= "Base"
ZEnable				= false
ZWriteEnable		= false
VertexShader		= "VS_WorldTools"
PixelShader			= "PS_WorldTools"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"

[Material_Minimap]
SDP					= "Base"
ZEnable				= false
ZWriteEnable		= false
AlphaBlendEnable	= true
DestBlend			= "InvSrcAlpha"
SrcBlend			= "SrcAlpha"
VertexShader		= "VS_PosUV"
PixelShader			= "PS_Minimap"
NumSamplers			= &
@ Sampler
@@&					= "PointSampler"

[Material_FXAA]
SDP				= "EldFXAA"
VertexShader	= "VS_PosUV"
PixelShader		= "PS_FXAA"
ZEnable			= false
NumSamplers	= &
@ Sampler
@@&				= "FXAASampler"

[Material_Upscale]
VertexShader	= "VS_PosUV"
PixelShader		= "PS_Upscale"
ZEnable			= false
ZWriteEnable	= false
NumSamplers	= &
@ Sampler
@@&				= "UpscaleSampler"

